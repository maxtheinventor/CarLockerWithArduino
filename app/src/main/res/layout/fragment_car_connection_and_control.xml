<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.drawerlayout.widget.DrawerLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.CarConnectionAndControl">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#000000">

            <ImageView
                android:id="@+id/downArrow"
                android:layout_width="73dp"
                android:layout_height="106dp"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.612"
                app:srcCompat="@drawable/ic_baseline_arrow_downward_white_24" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/startStopCarConnection_CC"
                android:layout_width="251dp"
                android:layout_height="210dp"
                android:src="@drawable/connect_to_car"
                android:visibility="gone"
                app:civ_border_color="#FFFFFF"
                app:civ_border_width="4dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.494"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ProgressBar
                android:id="@+id/connectingToCarProgressBar"
                style="?android:attr/progressBarStyle"
                android:layout_width="451dp"
                android:layout_height="327dp"
                android:layout_marginTop="203dp"
                android:layout_marginBottom="202dp"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/registerACarToContinueTitle"
                android:layout_width="366dp"
                android:layout_height="79dp"
                android:fontFamily="@font/alata"
                android:gravity="center"
                android:text="@string/registerACarToConnectToIt"
                android:textColor="#FFFFFF"
                android:textSize="25sp"
                android:textStyle="bold"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.465" />

            <ImageView
                android:id="@+id/connectViaBluetooth"
                android:layout_width="121dp"
                android:layout_height="94dp"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.37"
                app:srcCompat="@drawable/ic_baseline_bluetooth_24" />

            <ImageView
                android:id="@+id/connectViaNFC"
                android:layout_width="121dp"
                android:layout_height="94dp"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.687"
                app:srcCompat="@drawable/ic_baseline_nfc_24" />


        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.drawerlayout.widget.DrawerLayout>

</layout>